<h1>Employee List</h1>

<table class="table table table table-bordered table-hover table-striped">
  <thead class="table-dark">
      <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Age</th>
      <th>Gender</th>
      <th>Designation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @staffs.each do |staff| %>
      <tr>
        <td><%= staff.first_name %></td>
        <td><%= staff.last_name %></td>
        <td><%= staff.age %></td>
        <td><%= staff.gender %></td>
        <td><%= staff.designation %></td>
        <td><%= link_to 'Show', staff, class:"btn btn-outline-primary" %></td>
        <td><%= link_to 'Edit', edit_staff_path(staff), class:"btn btn-outline-info" %></td>
        <td><%= link_to 'Delete',staff, class:"btn btn-outline-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Employee', new_staff_path, class:"btn btn-success"  %>
